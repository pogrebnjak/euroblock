<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Евроблок</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Подключение внешнего файла CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Google Fonts: Roboto -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,500,700&display=swap">
    <!-- Bootstrap CSS (для базовой сетки и компонентов) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>
<body>
    <div class="wrapper">
        <header>
            <!-- Верхняя часть: Top Bar -->
            <div class="top-bar">
                <div class="container">
                    <div class="top-bar-left">
                        <span class="phone-number"><a href="tel:+78001005653">+7-800-100-56-53</a></span>
                        <span class="call-link"><a href="#">Заказать звонок</a></span>
                    </div>
                    <div class="top-bar-right">
                        <span class="city">Омск</span>
                        <div class="social-icons">
                            <a href="#" title="Вконтакте"><i class="bi bi-vk"></i></a>
                            <a href="#" title="Инстаграм"><i class="bi bi-instagram"></i></a>
                            <a href="#" title="WhatsApp"><i class="bi bi-whatsapp"></i></a>
                            <a href="#" title="Телеграм"><i class="bi bi-telegram"></i></a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Нижняя часть: Main Navigation -->
            <div class="main-nav">
                <div class="container nav-container">
                    <!-- Логотип (PNG) слева -->
                    <div class="logo">
                        <img src="~/images/logo.png" alt="Логотип Евроблок" />
                    </div>

                    <!-- Горизонтальное меню -->
                    <nav class="nav-menu">
                        <ul class="nav-list" id="navList">
                            <li><a href="/">Главная</a></li>
                            <li><a href="/Home/About">О компании</a></li>
                            <li><a href="/Home/Products">Продукция</a></li>
                            <li><a href="/Home/News">Новости</a></li>
                            <li><a href="/Home/Contact">Контакты</a></li>
                        </ul>
                    </nav>

                    <!-- Кнопка-гамбургер для мобильного меню -->
                    <button class="burger-menu" id="burgerMenuBtn">
                        <span></span>
                        <span></span>
                        <span></span>
                    </button>
                </div>
            </div>
        </header>

                    <!-- Основное меню -->
                    <ul class="nav-list" id="mainNavList">
                        <li><a href="#">Каталог</a></li>
                        <li><a href="#">Услуги</a></li>
                        <li><a href="#">О нас</a></li>
                        <li><a href="#">Информация</a></li>
                        <li><a href="#">Выполненные объекты</a></li>
                        <li><a href="#">Прайс</a></li>
                        <li><a href="#">Где купить</a></li>
                    </ul>
                </div>
            </div>
        </header>

        <!-- Основной контент -->
        <div class="content">
            @RenderBody()
        </div>
        <!-- Основной контент -->
        <div class="content">
            @RenderBody()
        </div>

        <!-- Нижний футер с адресом и соцсетями -->
        <footer>
            <div class="container footer-container">
                <div class="footer-left">
                    <p>© @DateTime.Now.Year Евроблок. Все права защищены.</p>
                    <p>Адрес: ул. Примерная, 123, Омск</p>
                </div>
                <div class="footer-right">
                    <a href="https://vk.com" target="_blank" class="social-btn" title="Вконтакте"><i class="bi bi-vk"></i></a>
                    <a href="https://instagram.com" target="_blank" class="social-btn" title="Инстаграм"><i class="bi bi-instagram"></i></a>
                    <a href="https://wa.me/123456789" target="_blank" class="social-btn" title="WhatsApp"><i class="bi bi-whatsapp"></i></a>
                    <a href="https://t.me/yourchannel" target="_blank" class="social-btn" title="Телеграм"><i class="bi bi-telegram"></i></a>
                </div>
            </div>
        </footer>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
<script>
    const burgerBtn = document.getElementById('burgerMenuBtn');
    const navList = document.getElementById('navList');

    burgerBtn.addEventListener('click', function() {
      navList.classList.toggle('mobile-show');
    });
</script>
