<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Евроблок</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Подключение внешнего файла CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Google Fonts: Roboto -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,500,700&display=swap">
    <!-- Bootstrap CSS (для базовой сетки и компонентов) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>
<body>
    <div class="wrapper">
        <!-- Верхний бар (Top Bar) с информацией (можно взять данные из старого сайта) -->
        <div class="top-bar">
            <div class="container">
                <div class="top-info">
                    <span>Время работы: Пн-Пт 9:00 - 18:00</span>
                    <span>Телефон: +359 888 123 456</span>
                </div>
            </div>
        </div>

        <!-- Фиксированный Header с навигацией -->
        <header>
            <div class="header-container">
                <div class="company-name">Евроблок</div>
                <nav class="nav-links">
                    <a href="/">Главная</a>
                    <a href="/Home/About">О компании</a>
                    <a href="/Home/Products">Продукция</a>
                    <a href="/Home/News">Новости</a>
                    <a href="/Home/Contact">Контакты</a>
                </nav>
                <button class="callback-btn" onclick="alert('Заказать обратный звонок')">Обратный звонок</button>
            </div>
        </header>

        <!-- Основной контент -->
        <div class="content">
            @RenderBody()
        </div>

        <!-- Нижний футер с адресом и соцсетями -->
        <footer>
            <div class="container footer-container">
                <div class="footer-left">
                    <p>© @DateTime.Now.Year Евроблок. Все права защищены.</p>
                    <p>Адрес: ул. Примерная, 123, София, Болгария</p>
                </div>
                <div class="footer-right">
                    <a href="https://vk.com" target="_blank" class="social-btn" title="Вконтакте"><i class="bi bi-vk"></i></a>
                    <a href="https://instagram.com" target="_blank" class="social-btn" title="Инстаграм"><i class="bi bi-instagram"></i></a>
                    <a href="https://wa.me/123456789" target="_blank" class="social-btn" title="WhatsApp"><i class="bi bi-whatsapp"></i></a>
                    <a href="https://t.me/yourchannel" target="_blank" class="social-btn" title="Телеграм"><i class="bi bi-telegram"></i></a>
                </div>
            </div>
        </footer>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
